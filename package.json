{
  "name": "the-pomo-timer",
  "version": "1.2.3",
  "description": "A Pomodoro timer to help you improve your productivity.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build"
  },
  "author": "Heath Blandford",
  "license": "ISC",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^5.0.2",
    "electron-builder": "^20.41.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heathblandford/the-pomo-timer.git"
  },
  "build": {
    "appId": "com.thepomotimer.app",
    "productName": "The Pomo Timer",
    "target": "NSIS",
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "createDesktopShortcut": false
    }
  }
}
